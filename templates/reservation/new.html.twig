{% extends 'base.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block body %}
    <section class="login_section h-100">
        <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row g-0">
                    <div class="card-body p-md-5 mx-md-4">
                        <div class="text-center">
                            <img src="{{ asset('img/logo_quai_antique.svg') }}" alt="" width="250" height="75">
                            <h4 class="mt-1 mb-5 pb-1">Nouvelle réservation</h4>
                        </div>
        
                        <form method="post">
                            {{ form_start(form) }}
                                <div class="my-custom-class-for-errors">
                                    {{ form_errors(form) }}
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        {{ form_label(form.nom) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_widget(form.nom) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_label(form.nbCouvert) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_widget(form.nbCouvert) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_label(form.allergie) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_widget(form.allergie) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_label(form.date) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_widget(form.date) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_label(form.heure) }}
                                    </div>
                                    <div class="col-12">
                                        {{ form_widget(form.heure) }}
                                    </div>
                                </div>
                            
                            <div class="text-center pt-1 mb-5 pb-1">
                                <a href="/" class="retour_acc btn mt-3 mb-3 me-3" type="button">Retour</a>
                                <button class="sinscrire btn mt-3 mb-3">{{ button_label|default('Enregistrer') }}</button>
                            </div>
                            {{ form_end(form, {render_rest: false}) }}
                            
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
                        </form>
                    </div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </section>
{% endblock %}
