{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <h1>Réservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ reservation.nom }}</td>
            </tr>
            <tr>
                <th>NbCouvert</th>
                <td>{{ reservation.nbCouvert }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ reservation.heure ? reservation.heure|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Allergie</th>
                <td>{{ reservation.allergie }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">Retour à la liste</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Editer</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
