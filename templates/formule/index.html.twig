{% extends 'base.html.twig' %}

{% block title %}Formule index{% endblock %}

{% block body %}
    <h1>Formule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Menu</th>                
                <th>Titre</th>
                <th>Disponibilite</th>
                <th>Description</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formule in formules %}
            <tr>
                <td>{{ formule.id }}</td>
                <td>{{ formule.menu }}</td>
                <td>{{ formule.titre }}</td>
                <td>{{ formule.disponibilite }}</td>
                <td>{{ formule.description }}</td>
                <td>{{ formule.prix }}</td>
                <td>
                    <a href="{{ path('app_formule_show', {'id': formule.id}) }}">show</a>
                    <a href="{{ path('app_formule_edit', {'id': formule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_formule_new') }}">Create new</a>
{% endblock %}
