{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% block header %} {% endblock %} 
    <section class="login_section h-100">
        <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row g-0">
                    <div class="card-body p-md-5 mx-md-4">
                        <div class="text-center">
                            <img src="{{ asset('img/logo_quai_antique.svg') }}" alt="" width="250" height="75">
                            <h4 class="mt-1 mb-5 pb-1">J'ai un espace client</h4>
                        </div>
        
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                </div>
                            {% endif %}
                            <p>J'ai un espace client</p>
        
                            <div class="form-outline mb-4">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                                    placeholder="Adresse email" utocomplete="email" required autofocus>
                                <label class="form-label" for="inputEmail">Je saisis mon e-mail</label>
                            </div>
        
                            <div class="form-outline mb-4">
                                <input type="password" name="password" id="inputPassword" class="form-control" 
                                    autocomplete="current-password" required>
                                <label class="form-label" for="inputPassword">Je saisis mon mot de passe</label>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
                            <div class="text-center pt-1 mb-5 pb-1">
                                <a href="/" class="retour_acc btn mb-3 me-3" type="button">Retour</a>
                                <button class="connecter btn mb-3" type="submit">Se connecter</button>
                            </div>
        
                            <div class="d-flex align-items-center justify-content-center pb-4">
                                <p class="mb-0 me-2">Je n'ai pas d'espace client ?</p>
                                <a href="/user/new" class="btn btn-outline-danger" type="button">Créer un espace client</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </section>
{% endblock %}
