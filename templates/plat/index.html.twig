{% extends 'base.html.twig' %}

{% block title %}Liste des Plats{% endblock %}

{% block body %}
    <h1>Liste des Plats</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Categorie</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plat in plats %}
            <tr>
                <td>{{ plat.id }}</td>
                <td>{{ plat.titre }}</td>
                <td>{{ plat.categorie }}</td>
                <td>{{ plat.description }}</td>
                <td>{{ plat.prix }}</td>
                <td>
                    <a href="{{ path('app_plat_show', {'id': plat.id}) }}">Afficher</a>
                    <a href="{{ path('app_plat_edit', {'id': plat.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">aucune entrée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_plat_new') }}">Créer nouveau plat</a>
{% endblock %}
